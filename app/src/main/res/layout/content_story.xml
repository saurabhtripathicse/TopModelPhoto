<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.hellsingorg.topmodelphoto.Activity.ModelStoryActivity"
    tools:showIn="@layout/activity_model_story">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text25sp"
            android:text="NAME"
            android:id="@+id/textviewNameModel"
            android:textColor="@color/social_twitter_color"
            android:layout_margin="@dimen/margin_5dp"
            android:textAllCaps="true"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text30sp"
            android:textAllCaps="true"
            android:id="@+id/textviewHeading"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:text="HEADING"
            android:layout_margin="@dimen/margin_5dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textviewDescription"
            android:layout_margin="@dimen/margin_5dp"
            android:textColor="@color/white"
            android:text="@string/data" />
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>